<h1>My Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th>Total</th>
      <th>Placed On</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.status.title.capitalize %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.created_at.strftime("%d %B %Y") %></td>
        <td>
        <td><%= link_to 'View Details', order_path(order), class: 'btn btn-info' %></td>
        
          <% if order.status.title == 'unpaid' %>
            <%= link_to 'Mark as Paid', mark_as_paid_order_path(order), method: :patch, class: 'btn btn-success' %>
          <% else %>
            Paid
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
