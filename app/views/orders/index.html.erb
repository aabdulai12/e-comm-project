<!-- app/views/orders/index.html.erb -->
<h1>My Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Status</th>
      <th>Total</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status.title.capitalize %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.created_at.strftime("%d %B %Y") %></td>
        <td>
          <% if order.status == "unpaid" %>
            <%= link_to "Pay Now", order_payment_path(order), class: "btn btn-warning" %>
          <% else %>
            <span class="text-success">Paid</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
