<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Shopping Cart</h2>

      <% if session[:cart].blank? %>
        <div class="jumbotron">
          <p>Your cart is totally empty!</p>
          <p>
            <%= link_to 'Take me home!', root_path, class: "btn btn-lg btn-danger" %>
          </p>
        </div>
      <% else %>
        <div class="table-responsive">
          <!-- Cart Items Table -->
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Update</th>
                <th>Price</th>
                <th>Remove</th>
              </tr>
            </thead>
            <tbody>
              <% total = 0 %>
              <% session[:cart] ||= {} %>
              <% @cart_products.each do |product| %>
                <% quantity = session[:cart][product.id.to_s]&.to_i || 0 %>
                <tr>
                  <td><%= link_to product.name, store_product_path(product.id) %></td>

                  <!-- Quantity Field with Update Button -->
                  <td>
                    <%= form_with(url: update_cart_path(product), method: :patch, local: true) do |f| %>
                      <%= f.number_field :quantity, value: quantity, min: 1, class: "form-control quantity-input" %>
                  </td>
                  <td>
                      <%= f.submit "Update", class: "btn btn-warning" %>
                    <% end %>
                  </td>

                  <!-- Price Column with Sale Price -->
                  <% if product.sale_price %>
                    <td>
                      <span class="salePrice"><%= number_to_currency product.sale_price %></span>
                      <span class="oldPrice"><%= number_to_currency product.price %></span>
                    </td>
                    <% total += product.sale_price * quantity %>
                  <% else %>
                    <td><%= number_to_currency product.price %></td>
                    <% total += product.price * quantity %>
                  <% end %>

                  <!-- Remove Button -->
                  <td>
                    <%= link_to "Remove", remove_product_path(product.id), method: :delete, class: "btn btn-primary" %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td colspan="2"></td>
                <td><strong>Total:</strong></td>
                <td><%= number_to_currency total %></td>
                <td></td>
              </tr>
              <tr>
                <td colspan="4"></td>
                <td>
                  <%= link_to "Empty Cart", empty_cart_path, method: :delete, class: "btn btn-danger" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Checkout Form -->
        <h2>Order Details</h2>
        <%= form_with url: place_order_path, method: :post, local: true do %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag :first_name, "First Name" %>
                <%= text_field_tag :first_name, nil, class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= label_tag :last_name, "Last Name" %>
                <%= text_field_tag :last_name, nil, class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= label_tag :address, "Address" %>
                <%= text_field_tag :address, nil, class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= label_tag :city, "City" %>
                <%= text_field_tag :city, nil, class: "form-control", required: true %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag :province, "Province" %>
                <%= select_tag :province, options_from_collection_for_select(@provinces, "id", "name"), class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= label_tag :email, "Email" %>
                <%= email_field_tag :email, nil, class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= label_tag :postal, "Postal Code" %>
                <%= text_field_tag :postal, nil, class: "form-control", required: true %>
              </div>
            </div>
          </div>
          <div class="text-right">
            <%= submit_tag 'Place Order', class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
